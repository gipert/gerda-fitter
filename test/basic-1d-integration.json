{
    "id" : "basic-1d",
    "logging" : "summary",
    "precision" : "kMedium",
    "output-dir" : "results",
    "global-mode-search" : {
        "method" : "kOptMinuit"
    },
    "integration" : {
        "enabled" : true,
        "use-best-fit-likelihood-offset" : true,
        "method" : "kIntCuba",
        "cuba-method" : "kCubaDivonne",
        "integrator-settings" : {
            "kIntDefault" : {
                "niter-max" : 5E04,
                "niter-min" : 0,
                "rel-precision" : 1E-3,
                "abs-precision" : 1E-12
            },
            "kIntCuba" : {
                "kCubaDivonne" : {
                    "niter-max" : 5E04,
                    "niter-min" : 0,
                    "flags" : 0
                }
            }
        }
    },
    "fit" : {
        "parameters" : {
            "signal-1" : {
                "range" : [0, 50],
                "long-name" : "Signal 1",
                "units" : "cts"
            },
            "signal-2" : {
                "range" : [0, 50],
                "long-name" : "Signal 2",
                "units" : "cts"
            },
            "bkg-1" : {
                "range" : [0, 0.05],
                "long-name" : "Background 1",
                "units" : "cts"
            }
        },
        "theoretical-expectations" : {
            "data/data.root" : {
                "h_data" : {
                    "fit-range" : [0, 100],
                    "rebin-factor" : 1,
                    "components" : [
                        {
                            "root-file" : "data/data.root",
                            "components" : {
                                "signal-1" : { "hist-name" : "h_f1" },
                                "signal-2" : { "hist-name" : "h_f2" },
                                "bkg-1" :    { "hist-name" : "h_f3" }
                            }
                        }
                    ]
                }
            }
        }
    }
}
