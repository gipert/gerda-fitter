{
    "id" : "basic-1d-observables",
    "logging" : "summary",
    "precision" : "kMedium",
    "output-dir" : "results",
    "global-mode-search" : {
        "method" : "kOptMinuit"
    },
    "observables" : {
        "total-counts" : {
            "TFormula" : "[signal-1]+[signal-2]+[bkg-1]",
            "range" : [0, 30],
            "long-name" : "Total counts",
            "units" : "cts"
        },
        "fancy-physics" : {
            "TFormula" : "32*[signal-1]+[bkg-1]/sqrt([signal-2])",
            "range" : [140, 500],
            "long-name" : "Some fancy observable",
            "units" : "things"
        }
    },
    "fit" : {
        "parameters" : {
            "signal-1" : {
                "range" : [0, 50],
                "long-name" : "Signal 1",
                "units" : "cts"
            },
            "signal-2" : {
                "range" : [0, 50],
                "long-name" : "Signal 2",
                "units" : "cts"
            },
            "bkg-1" : {
                "range" : [0, 0.05],
                "long-name" : "Background 1",
                "units" : "cts"
            }
        },
        "theoretical-expectations" : {
            "data/data.root" : {
                "h_data" : {
                    "fit-range" : [0, 100],
                    "rebin-factor" : 1,
                    "components" : [
                        {
                            "root-file" : "data/data.root",
                            "components" : {
                                "signal-1" : { "hist-name" : "h_f1" },
                                "signal-2" : { "hist-name" : "h_f2" },
                                "bkg-1" :    { "hist-name" : "h_f3" }
                            }
                        }
                    ]
                }
            }
        }
    }
}
