{
    "id" : "basic-1d-observables-scaling",
    "logging" : "debug",
    "precision" : "kMedium",
    "output-dir" : "results",
    "global-mode-search" : {
        "method" : "kOptMinuit"
    },
    "observables" : {
        "bkg-in-range" : {
            "TFormula" : "[bkg-1]/20",
            "scale-with-pdf-integral" : {
                "range" : [[10,19], [80,89]],
                "dataset" : "h_data"
            },
            "range" : [0, 0.05],
            "long-name" : "background in range [[10,20], [80,90]]",
            "units" : "cts/x-unit"
        }
    },
    "fit" : {
        "parameters" : {
            "signal-1" : {
                "range" : [0, 50],
                "long-name" : "Signal 1",
                "units" : "cts"
            },
            "signal-2" : {
                "range" : [0, 50],
                "long-name" : "Signal 2",
                "units" : "cts"
            },
            "bkg-1" : {
                "range" : [0, 0.05],
                "long-name" : "Background 1",
                "units" : "cts"
            }
        },
        "theoretical-expectations" : {
            "data/data.root" : {
                "h_data" : {
                    "fit-range" : [0, 100],
                    "rebin-factor" : 1,
                    "components" : [
                        {
                            "root-file" : "data/data.root",
                            "components" : {
                                "signal-1" : { "hist-name" : "h_f1" },
                                "signal-2" : { "hist-name" : "h_f2" },
                                "bkg-1" :    { "hist-name" : "h_f3" }
                            }
                        }
                    ]
                }
            }
        }
    }
}
